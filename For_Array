import java.util.Arrays;
public class ArrayConcatenadores {



    public static void main(String[] args) {

// Declaramos variables, primero el array y luego otra variable extra para a√±adir los espacios vacios
            
            String[] names = {"Manuel" , "Leo" , "Alfonso"};

            String concatenar = "";

// Iniciamos bucle for :
            
            for(int i = 0; i < names.length; i++){

                concatenar = concatenar + " " + names[i];
            }
// Imprimimos por pantalla el resultado :
        
        System.out.println(concatenar);

            }


            }
